@model Tuple<User, IEnumerable<Breadcrumb>>

@{
    ViewData["Title"] = "Tài khoản - STech";

    User user = Model.Item1;
}

@await Html.PartialAsync("PartialViews/Breadcrumb", Model.Item2)

<section class="account-page row m-0 align-items-">
    <div class="col-12 col-sm-12 col-lg-3 p-0">
        <nav class="account-sidebar">
            <ul class="p-0 m-0">
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-item active d-flex gap-2 align-items-center" data-sidebar="profile">
                        <i class="fa-solid fa-user"></i>
                        <span>Tổng quan</span>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-item d-flex gap-2 align-items-center" data-sidebar="addresses">
                        <i class="fa-solid fa-map-location-dot"></i>
                        <span>Địa chỉ</span>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-item d-flex gap-2 align-items-center" data-sidebar="orders">
                        <i class="fa-solid fa-receipt"></i>
                        <span>Đơn hàng</span>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-item d-flex gap-2 align-items-center" data-sidebar="reviews">
                        <i class="fa-solid fa-star-half-stroke"></i>
                        Đánh giá
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-item d-flex gap-2 align-items-center" data-sidebar="password">
                        <i class="fa-solid fa-lock"></i>
                        <span>Đổi mật khẩu</span>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="account-sidebar-logout d-flex gap-2 align-items-center">
                        <i class="fa-solid fa-sign-out"></i>
                        <span>Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-12 col-sm-12 col-lg-9 p-0">
        <div class="account-content-wrapper">
            <div class="account-content current" data-sidebar="profile">
                <div class="d-flex gap-3">
                    <div class="user-image-wrapper position-relative">
                        <div class="user-image">
                            <img src="@(user.Avatar ?? "/images/no-image.jpg")" />
                        </div>
                        <div class="click-change-image position-absolute">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </div>
                    </div>
                    <div class="user-infomation d-flex flex-column gap-1">
                        <span class="user-name">@user.Username</span>
                        <span class="user-fullname">@(user.FullName ?? "--")</span>
                        <span class="user-email">@user.Email</span>
                    </div>
                </div>

                <div class="mt-5">
                    <h5>Cập nhật thông tin</h5>
                    <div class="mt-3">
                        <form method="POST" class="form-update-user">
                            <div class="row m-0 p-0">
                                <div class="col-12 col-sm-7">
                                    <div class="page-input-box">
                                        <label>Họ tên</label>
                                        <input type="text" name="FullName" value="@(user.FullName ?? "")" placeholder="Họ tên" />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-5">
                                </div>
                            </div>
                            <div class="row m-0 mt-1 p-0">
                                <div class="col-12 col-sm-7">
                                    <div class="page-input-box">
                                        <label>Ngày sinh</label>
                                        <input type="date" name="DOB" value="@user.Dob" />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-5">
                                </div>
                            </div>
                            <div class="row m-0 mt-1 p-0">
                                <div class="col-12 col-sm-7">
                                    <div class="page-input-box">
                                        <label>Số điện thoại</label>
                                        <input type="text" name="PhoneNumber" value="@(user.Phone ?? "")" placeholder="Số điện thoại" />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-5">
                                    @if(!Convert.ToBoolean(user.PhoneConfirmed))
                                    {
                                        <div class="d-flex align-items-center h-100 pt-3">
                                            <a href="javascript:void(0)" class="verify-infomation text-success fw-bold">Xác nhận</a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row m-0 mt-1 p-0">
                                <div class="col-12 col-sm-7">
                                    <div class="page-input-box">
                                        <label>Email</label>
                                        <input type="text" name="PhoneNumber" value="@(user.Email ?? "")" placeholder="Email" />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-5">
                                    @if (!Convert.ToBoolean(user.EmailConfirmed))
                                    {
                                        <div class="d-flex align-items-center h-100 pt-3">
                                            <a href="javascript:void(0)" class="verify-infomation text-success fw-bold">Xác nhận</a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row m-0 mt-2 p-0">
                                <div class="col-12 col-sm-7">
                                    <div class="d-flex align-items-center gap-4">
                                        <div class="d-flex align-items-center gap-1">
                                            <label class="cursor-pointer" for="gender-male" style="font-size: 1.1rem">Nam</label>
                                            <input class="cursor-pointer" type="radio" id="gender-male" name="Gender" value="male" @(user.Gender == "male" ? "checked" : "") />
                                        </div>
                                        <div class="d-flex align-items-center gap-1">
                                            <label class="cursor-pointer" for="gender-female" style=" font-size: 1.1rem">Nữ</label>
                                            <input class="cursor-pointer" type="radio" id="gender-female" name="Gender" value="female" @(user.Gender == "female" ? "checked" : "") />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-5">
                                </div>
                            </div>

                            <button type="submit" class="form-submit-btn btn-sm mt-4">
                                CẬP NHẬT THÔNG TIN
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        
            <div class="account-content" data-sidebar="addresses">
                Address
            </div>

            <div class="account-content" data-sidebar="orders">
                Orders
            </div>

            <div class="account-content" data-sidebar="reviews">
                Reviews
            </div>

            <div class="account-content" data-sidebar="password">
                Password
            </div>
        </div>
    </div>
</section>